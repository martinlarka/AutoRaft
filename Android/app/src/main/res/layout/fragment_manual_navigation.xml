<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="se.martinlarka.autoraft.app.ManualNavigationFragment">

    <TextView
        android:id="@+id/current_value_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/current_value_top_padding"
        android:gravity="center_horizontal"
        android:textSize="@dimen/current_value_text_size"/>

    <SeekBar
        android:id="@+id/manual_seek_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@android:color/transparent"
        android:paddingTop="40dp" />

</LinearLayout>
